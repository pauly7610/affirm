# Database (requires Docker: `docker compose up -d postgres`)
DATABASE_URL=postgresql+asyncpg://affirm:affirm_dev@localhost:5432/affirm_discovery

# Set to "true" to skip Postgres and use in-memory mock data
USE_MOCK_DB=true

# Embedding model (set to "none" for deterministic fake embeddings)
EMBEDDING_MODEL=none
# EMBEDDING_MODEL=BAAI/bge-small-en-v1.5

# Reranker model (set to "none" for deterministic scoring)
RERANKER_MODEL=none
# RERANKER_MODEL=BAAI/bge-reranker-base

# LLM for summaries (none = template-based, no LLM needed)
LLM_PROVIDER=none
# LLM_PROVIDER=ollama
# LLM_PROVIDER=openai
# OPENAI_API_KEY=sk-...
# OLLAMA_HOST=http://localhost:11434

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
